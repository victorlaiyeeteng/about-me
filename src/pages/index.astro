---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { homePageContent, identity } from "../config";
import SocialLink from "../components/SocialLink.astro";
---

<Layout seo={homePageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="text-3xl mb-1">{identity.name}</h1>
    <p class="opacity-60 mb-6 subtitle">{homePageContent.role}</p>
    <div class="flex flex-row flex-wrap gap-6 mb-8">
      <Image
        src={identity.logo}
        alt={identity.name}
        width={100}
        height={100}
        loading="lazy"
        decoding="async"
        quality={100}
        densities={[1.5, 2]}
        class="rounded-full"
      />
      <div class="group flex flex-col justify-center gap-2 w-fit">
        {
          homePageContent.homeSocialLinks.map((link) => (
            <SocialLink
              title={link.title}
              url={link.url}
              icon={link.icon}
              external={link.external}
            />
          ))
        }
      </div>
    </div>
    <p class="max-w-2xl mb-3">
      <p class="max-w-2xl mb-3">Heavy focus in building scalable and optimized data solutions.</p>
      <!-- <p class="max-w-lg mb-3">I'll soon be joining <a href="https://www.qube-rt.com/" target="_blank" class="gradient-link">Qube Research & Technologies</a> as a Quantitative Technology Intern.</p> -->
      <p class="text-sm">What I've done in the past: </p>
      <ul class="list-disc pl-6 mb-3 text-sm">
        <li>Technology Summer Analyst at <a href="https://www.morganstanley.com/" target="_blank" class="gradient-link">Morgan Stanley</a></li>
        <li>Software Engineer Intern at <a href="https://www.switcheo.com/" target="_blank" class="gradient-link">Switcheo Labs</a></li>
        <li>Software Developer Intern at <a href="https://www.linkedin.com/company/cyberlitmus/" target="_blank" class="gradient-link">Cyberlitmus</a></li>
        <li>Naval Diver at <a href="https://www.mindef.gov.sg/" target="_blank" class="gradient-link">SAF</a> (National Service)</li>
      </ul>
      <p class="text-sm">What I'm studying: </p>
      <p class="text-sm">Computer Science at <a href="https://www.comp.nus.edu.sg/programmes/ug/cs/" target="_blank" class="gradient-link">NUS</a></p>
      <p class="mb-3 text-sm"><a href="https://credentials.nus.edu.sg/c732d3cf-fe85-469f-83de-07b5bca31d8f#acc.UeXyxz21" target="_blank" class="border-b border-gray-500 hover:border-gray-600 transition duration-200">Database Systems</a>, Parallel Computing</p>

      <p class="text-sm">What I love: </p>
      <p class="text-xl mb-3" title="basketball, tennis, poker, snowboard, travelling"> 🏀 🎾 🃏 🏂 🗺️</p>

      <p class="text-sm">Who I look up to: </p>
      <p class="text-sm">bill gates<a href="https://www.gatesnotes.com/" target="_blank" class="opacity-100 hover:!opacity-80 transition-opacity" style="font-size: 1.2em;">&#x2197</a> | lebron james<a href="https://www.lebronjames.com/" target="_blank" class="opacity-100 hover:!opacity-80 transition-opacity" style="font-size: 1.2em;">&#x2197</a></p>
    </p>
  </section>
</Layout>
